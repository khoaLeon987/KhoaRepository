<div class="reg-form" id='change_pass'>
<%= error_messages_for :customer %>
	<% if flash[:notice].blank? == false %>
		<div class='notice'><%= flash[:notice] %></div>
	<% end %>
<h1>Change Email: </h1>
	
    <%= form_for(@customer, :url => change_email_customer_url(@customer)) do  |f| %>
	   <table id='login_table' >
	   	 
		  <tr>
			<td>Email :</td>
			<td><%= f.text_field(:email) %> </td>	
		  </tr>
			<tr>
				<td>Confirm :</td>
				<td><%= f.text_field(:email_confirmation) %> </td>	
			</tr>
		  <tr >
			<td colspan='2' align="right" ><%= submit_tag("Save new email") %> or <%=link_to("Cancel",customer_todo_lists_url(@customer))%></td>
		  </tr>

	   </table>


	<% end %>
</div>